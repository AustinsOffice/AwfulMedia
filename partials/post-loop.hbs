{{#foreach posts}}
    <article class="{{post_class}} col-md-12">
        <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM do, YYYY"}}</time>
        <section class="post-excerpt">
            <header class="post-header">
                <h2 class="post-title loop-display"><a href="{{url}}">{{{title}}}</a></h2>
            </header>
            <p>{{excerpt words="29"}}<a class="read-more" href="{{url}}"> &rarr;</a></p>
            <footer class="post-meta">
                {{#if author.image}}<img class="author-thumb" src="{{author.image}}" alt="{{author.name}}" nopin="nopin" />{{/if}}
                By {{author}}
                <!--{{tags prefix=" / "}}-->
            </footer>
        </section>
    </article>
{{/foreach}}
{{pagination}}